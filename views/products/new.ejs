<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link href="/css/new.css" rel="stylesheet"> -->
    <link href="/css/main.css" rel="stylesheet">
    <title>Trending || <%= title %> </title>
</head>

<body>
    <%- include('../partials/_nav') %>

  <main>
    <h2 class="title-text">Add New Item</h2>

    <form action="/products" method="POST" enctype="multipart/form-data" class="form">

      <div>
        <!-- <label for="brand">Brand:</label><br /> -->
        <input class="field" type="text" id="category" name="category" maxlength="60" size="60" placeholder="Category"/>
      </div>

      <div>
        <!-- <label for="itemName">Item Name:</label><br /> -->
        <input class="field" type="text" id="name" name="name" maxlength="60" size="60" placeholder="Name"/>
      </div>

      <div>
        <!-- <label for="description"></label><br /> -->
        <textarea class="field" name="description" id="description" cols="58" rows="10" placeholder="Description"></textarea>
      </div>

      <div>
        <!-- <label for="image">Image:</label><br /> -->
        <input class="field" type="file" name="image" />
      </div>
      <br />

      <div class=button-container>
        <button class="submitButton" id="submit-new-btn" type="submit">Add Item</button>
      </div>

    </form>
  </main>

<%- include('../partials/_footer') %>
